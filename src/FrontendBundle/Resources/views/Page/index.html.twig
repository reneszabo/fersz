  <script src="/libs/waypoints/waypoints.min.js" type="text/javascript"></script>
  <script type="text/javascript">
    $(document).on('ready', function () {
      $('body > header').localScroll({offset: -110});
      $("video").prop('muted', true); //mute
      $('section').waypoint(function (direction) {
        if (direction === "down") {
          $('#fersz-menu a').removeClass('active');
          $('#fersz-menu li:nth-child(' + ($(this).index() * 1 - 1) + ') a').addClass('active');
        } else {
          $('#fersz-menu li:nth-child(' + ($(this).index() * 1 - 2) + ') a').addClass('active');
          $('#fersz-menu li:nth-child(' + ($(this).index() * 1 - 1) + ') a').removeClass('active');
        }
      }, {offset: 111});
    });


  </script>
{% endblock javascripts %}
